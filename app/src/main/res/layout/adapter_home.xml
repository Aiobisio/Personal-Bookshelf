<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/item_cover"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:gravity="center_vertical|left"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/item_cover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_cover" />

    <TextView
        android:id="@+id/item_author"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="top"
        android:textSize="15sp"
        android:layout_marginRight="15dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/item_cover"
        app:layout_constraintRight_toLeftOf="@+id/item_publisher"
        app:layout_constraintBottom_toBottomOf="@+id/item_cover" />

    <TextView
        android:id="@+id/item_publisher"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="top"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_author"
        app:layout_constraintBottom_toBottomOf="@+id/item_cover" />
</androidx.constraintlayout.widget.ConstraintLayout>